<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.hosain.voat">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".VoatApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.subverse.ThreadListActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.thread.DetailActivity"
            android:label="@string/title_activity_detail"
            android:parentActivityName=".activity.subverse.ThreadListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.subverse.ThreadListActivity" />
        </activity>
    </application>

</manifest>
