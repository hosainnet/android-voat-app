<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="BaseTextStyle">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="CommentTextStyle" parent="BaseTextStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
    </style>

    <style name="SelfTextStyle" parent="BaseTextStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
    </style>

    <style name="subverse_item_text_style" parent="BaseTextStyle">
        <item name="android:textSize">@dimen/subverse_list_item_text_size</item>
    </style>

</resources>
