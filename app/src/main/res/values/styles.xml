<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Main theme colors -->
        <item name="colorPrimary">@color/primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/accent</item>

    </style>

    <style name="BaseTextStyle">
        <item name="android:paddingLeft">@dimen/base_text_padding</item>
        <item name="android:paddingRight">@dimen/base_text_padding</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="CommentTextStyle" parent="BaseTextStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
    </style>

    <style name="SelfTextStyle" parent="BaseTextStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
    </style>

    <style name="SubverseItemContainerStyle">
        <item name="android:paddingTop">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingLeft">@dimen/activity_vertical_margin</item>
        <item name="android:paddingRight">@dimen/activity_vertical_margin</item>
    </style>


    <style name="SubverseItemImageStyle">
        <item name="android:layout_marginRight">@dimen/subverse_list_item_image_margin</item>
    </style>

    <style name="SubverseItemTextStyle" parent="BaseTextStyle">
        <item name="android:textSize">@dimen/subverse_list_item_title</item>
    </style>

    <style name="SubverseItemCommentsTextStyle" parent="SubverseItemTextStyle">
        <item name="android:textSize">@dimen/subverse_list_item_title</item>
        <item name="android:background">@drawable/ic_chat_bubble_outline_black_24dp</item>
        <item name="android:minEms">2</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SubverseItemMetadata">
        <item name="android:paddingTop">@dimen/subverse_list_item_metadata_padding</item>
        <item name="android:paddingBottom">@dimen/subverse_list_item_metadata_padding</item>
    </style>

    <style name="SubverseItemMetadataTextStyle" parent="BaseTextStyle">
        <item name="android:textSize">@dimen/subverse_list_item_metadata</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

</resources>
