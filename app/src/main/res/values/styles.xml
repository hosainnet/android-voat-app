<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="BaseTextStyle">
        <item name="android:paddingLeft">@dimen/base_text_padding</item>
        <item name="android:paddingRight">@dimen/base_text_padding</item>
    </style>

    <style name="CommentTextStyle" parent="BaseTextStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
    </style>

    <style name="SelfTextStyle" parent="BaseTextStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
    </style>

    <style name="SubverseItemContainerStyle">
        <item name="android:paddingTop">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingLeft">@dimen/activity_vertical_margin</item>
        <item name="android:paddingRight">@dimen/activity_vertical_margin</item>
    </style>

    <style name="SubverseItemTextStyle" parent="BaseTextStyle">
        <item name="android:textSize">@dimen/subverse_list_item_text_size</item>
    </style>

    <style name="SubverseItemImageStyle">
        <item name="android:layout_marginRight">@dimen/subverse_item_image_margin_right</item>
    </style>

</resources>
